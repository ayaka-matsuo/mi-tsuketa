<h1>おもちゃ一覧</h1>

<h3>検索タグ</h3>
<%= form_tag(toys_path, :method => "get") do %>
 <%= text_field_tag :search %>
<%= submit_tag "検索" ,:name => nil ,class: "button is-info"%>
<% end %>


<table class="table">
	<tbody>
		<% @toys.each do |toy| %>
		<tr>
			<td>
				<%= link_to toy_path(toy.id) do %>
					<%= attachment_image_tag toy, :toy_image, format: 'jpeg', size: "100x100", fallback: "no_image.jpg" %>
				<% end %>
			</td>

			<td>
				<%= toy.manufacturer %>
			</td>

			<td>
				<%= toy.name %>
			</td>
			<td>
				<%= toy.price %>円
			</td>

			<td>
				<%= link_to '口コミする',  new_toy_review_path(toy), class: 'btn btn-primary', data: {"turbolinks" => false} %>
			</td>

		</tr>
		<% end %>
	</tbody>
</table>
