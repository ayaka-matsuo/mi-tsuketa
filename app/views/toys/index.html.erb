<%= render 'layouts/header' %>


<div class="container">
	<h2>口コミする商品をお選び下さい</h2><br>

		<div class="row col-md-12 searchfield">

			<%= form_tag(toys_path, :method => "get") do %>
			 <%= text_field_tag :search %>
			<%= submit_tag "検索" ,:name => nil ,class: "button is-info"%>
			<% end %>
		</div>

		<br><br><br>


		<div class="col-md-12">
			<% @toys.each do |toy| %>

			<div class="col-md-4 toycontents">
				<div>
					<div class="col-md-3">
						<%= link_to toy_path(toy.id) do %>
							<%= attachment_image_tag toy, :toy_image, format: 'jpeg', size: "100x100", fallback: "no_image.jpg" %>
						<% end %>
					</div>

					<div class="col-md-offset-1 col-md-8">
						<%= toy.manufacturer %><br>
						<%= toy.name %><br>
						<%= toy.price %>円<br>
					</div>
				<%= link_to '口コミする',  new_toy_review_path(toy), class: 'btn btn-primary col-md-offset-2 col-md-9 botan', data: {"turbolinks" => false} %>
				</div>
			</div>
			<% end %>
		</div>
</div>
