<h1>おもちゃ一覧</h1>



<table class="table">
	<tbody>
		<% @toys.each do |toy| %>

		<%#= attachment_image_tag toy, :profile_image, format: 'jpeg', size: "100x100", fallback: "no_image.jpg" %>

			<tr>
				<td>
					<%= toy.manufacturer %>
				</td>

				<td>
					<%= toy.name %>
				</td>
				<td>
					<%= toy.price %>円
				</td>

				<td>
					<%= link_to '口コミする',  new_review_path, class: 'btn btn-primary' %>
				</td>

			</tr>
		<% end %>
	</tbody>
</table>
