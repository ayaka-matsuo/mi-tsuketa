
<table class="table">

	<div class="row col-md-3">
		<%= attachment_image_tag user, :profile_image, format: 'jpeg', size: "90x90", fallback: "no_image.jpg" %>
	</div>
	<div class="row col-md-offset-4 col-md-7 prof-name">
		<%= user.name %><br>
		フォロー数:<br>
		フォロワー数:<br>
	</div>
	<tbody>
		<tr>
			<th class="active" style="font-size: 9px;">趣味</th>
			<th><%= user.hobby %></th>
		</tr>
		<tr>
			<th class="active" style="font-size: 9px;">都道府県</th>
			<th><%= user.place %></th>
		</tr>
		<tr>
			<th class="active" style="font-size: 9px;">自己紹介</th>
			<th><%= user.introduction %></th>
		</tr>
	</tbody>
</table>