<%= render 'layouts/header' %>


<div class="container">


  <div class="breadcrumbs">
    <%= link_to root_path do %>
      <%= "Home" %>
    <% end %>
    <%= ">" %>
    <span class="current">新規登録画面</span>
  </div>


  <h3 class="toy_select">新規登録画面</h3>

  <div class="row">

    <div class="col-md-offset-2 col-md-8">

      <br><br>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <table class="table">

          <tr>
            <th class="active">ニックネーム</th>
            <td><%= f.text_field :name, autofocus: true, autocomplete: "ニックネーム", :size=>"30" %>
            </td>
          </tr>

          <tr>
            <th class="active">お住まいの都道府県</th>
            <td><%= f.text_field :place, autofocus: true, autocomplete: "都道府県", :size=>"30" %>
            </td>
          </tr>

          <tr>
            <th class="active">性別</th>
            <td><%= f.select :sex, {'男性': 1, '女性': 2}, { include_blank: '選択してください'}, { class: 'form-control　formselectsex' , required: true } %>
            </td>
          </tr>

          <tr>
            <th class="active">ご年齢</th>
            <td><%= f.text_field :age, autofocus: true, :size=>"10", autocomplete: "ご年齢" %><%="歳"%>
            </td>
          </tr>

          <tr>
            <th class="active">メールアドレス</th>
            <td><%= f.email_field :email, autofocus: true, :size=>"50", autocomplete: "メールアドレス" %>
            </td>
          </tr>

          <tr>
            <th class="active">パスワード</th>
            <td><% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
            </td>
          </tr>

          <tr>
            <th class="active">パスワード(確認用)</th>
            <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %>
            </td>
          </tr>
        </table>
    </div>

    <br><br><br>

    <div class="row col-md-12 signupformbtn">
      <div class="actions">
        <%= f.submit "子供情報入力画面へ進む", class: 'btn btn-primary centerbtn' %>
      </div>
      <% end %>

      <br>
            <p class="btn btn-orange centerbtn">既に登録済みの方は
            <%= link_to ' こちら ', new_user_session_path %> からログインしてください。</p>
    </div>

  </div>
</div>


