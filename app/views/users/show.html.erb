<h1>マイページ</h1>

<table class="table">

	<%= attachment_image_tag @user, :profile_image, format: 'jpeg', size: "100x100", fallback: "no_image.jpg" %>
	<tbody>
		<tr>
			<th><%= @user.name %></th>
			<th></th>
			<th></th>
		</tr>
		<tr>
			<th>趣味</th>
			<th><%= @user.hobby %></th>
		</tr>
		<tr>
			<th>都道府県</th>
			<th><%= @user.place %></th>
		</tr>
		<tr>
			<th>自己紹介</th>
			<th><%= @user.introduction %></th>
		</tr>
	</tbody>
</table>

<%= link_to '編集する', edit_user_path(@user), class: 'btn btn-primary', data: {"turbolinks" => false} %>

<h2><%= @user.name %>さんの最近の口コミ</h2>

<% @user.reviews.each do |review| %>

	<%= review.created_at %>
	<%= attachment_image_tag review.toy, :toy_image, format: 'jpeg', size: "100x100", fallback: "no_image.jpg" %>
	<%= review.toy.name %>
	<%= review.review_point %>
<% end %>

<h3>登録済みのお子様</h3>

<% @user.children.each do |child| %>

	<%= attachment_image_tag child, :profile_image, format: 'jpeg', size: "100x100", fallback: "no_image.jpg" %>
	<%= child.name %>
	<%= child.sex %>
	<% if child.temperament == 1 %>
    		<%= "エンジェルタイプ" %>
    	<% elsif child.temperament == 2 %>
    		<%= "テキストタイプ" %>
    	<% elsif child.temperament == 3 %>
    		<%= "アクティブタイプ" %>
    	<% elsif child.temperament == 4 %>
    		<%= "デリケートタイプ" %>
    	<% else %>
    		<%= "ネガティブタイプ" %>
    <% end %>
<% end %>

<h3>最近のおもいで</h3>

<% @user.child_archives.each do |child_archive| %>

<%= attachment_image_tag child_archive, :profile_image, format: 'jpeg', size: "100x100", fallback: "no_image.jpg" %>
<%= child_archive.created_at %>
<%= child_archive.child.name %>
<% end %>





