<%= render 'layouts/header' %>

<div class="container">

	<h3 class="toy_select">こども詳細画面</h3><br>

		<div class="row child_archivecontents">
			<div class="col-md-offset-5 col-md-7">

				<%= attachment_image_tag @child, :profile_image, format: 'jpeg', size: "200x200", fallback: "no_image.jpg" %>

			</div>


			<div class="col-md-offset-2 col-md-8">

						<br><table class="table">
							<tbody>

								<tr>
					  				<th class="active">ニックネーム</th>
					  				<th>
					  					<%= @child.name %>
					  				</th>
				  				</tr>

								<tr>
					  				<th class="active">性別</th>
					  				<th>
					  					<% if @child.sex == 1 %>
					  						<%= "男の子" %>
					  					<% else %>
					  						<%= "女の子" %>
					  					<% end %>
					  				</th>
				  				</tr>

				  				<tr>
					  				<th class="active">年齢</th>
					  				<th>
					  					<%= @child.age_year %>歳
					  					<%= @child.age_month %>ヶ月
					  				</th>
				  				</tr>


					  			<tr>
					  				<th class="active">性格タイプ</th>
					  				<th>
					  					<%= @child.temperaments.pluck(:name).join(", ") %>
					  				</th>
				  				</tr>

				  				<tr>
					  				<th class="active">お住まいの種類</th>
					  				<th>
					  					<% if @child.environment == true %>
				                			<%= "マンション・アパート" %>
				                		<% else %>
				                			<%= "一軒家" %>
				                		<% end %>
					  				</th>
					  			</tr>

					  			<tr>
					  				<th class="active">好きなもの</th>
					  				<th><%= @child.favorite_thing %>
					  				</th>
				  				</tr>

				  				<tr>
					  				<th class="active">嫌いなもの</th>
					  				<th><%= @child.un_favorite_thing %>
					  				</th>
				  				</tr>

				  				<tr>
					  				<th class="active">最近覚えた言葉・口癖</th>
					  				<th><%= @child.status %>
					  				</th>
				  				</tr>

							</tbody>
						</table>
				</div>

				<div class="col-md-12 centerbtn">
						 <%= link_to '編集する', edit_child_path(@child.id), class: 'btn btn-primary centerbtn', data: {"turbolinks" => false} %>
				</div>
			</div>
		</div>


</div>



